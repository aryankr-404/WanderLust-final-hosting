<% layout('/layouts/boilerplate') -%>
<% if(searchedListings.length == 0){ %>
        <h3>No results Found!!</h3>
<% } %>

<% if(searchedListings.length > 0){ %>
<h3>Showing results for <%= searchLocation %></h3>
<br>
<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
    <% for(let listing of searchedListings){ %>
        <a href="/listings/<%= listing.id %>" method="GET" class="listing-link" >
            <div class="card col listing-card">
                <img src="<%= listing.image.url%> " class="card-img-top card-img" alt="Listing image">
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title%> </b><br>
                   &#8377; <%= listing.price.toLocaleString("en-IN") %>
                   <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                  </p>
                </div>
            </div>  
        </a>
          
    <% } %>
</div>  
<% } %> 